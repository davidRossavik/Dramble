{
  "expo": {
    "name": "Dramble",
    "slug": "Dramble",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/textLogo.png",
    "scheme": "dramble",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dramble.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/textLogo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/textLogo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/textLogo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "splash": {
      "image": "./assets/images/textLogo.png",  
      "resizeMode": "contain",                
      "backgroundColor": "#000000"            
    }
  }
}
